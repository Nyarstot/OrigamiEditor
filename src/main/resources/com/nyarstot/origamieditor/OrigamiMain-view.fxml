<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.fxmisc.richtext.*?>

<BorderPane stylesheets="@editor/OrigamiDark.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nyarstot.origamieditor.MainWindowController">
   <top>
      <MenuBar blendMode="SRC_ATOP" prefWidth="1089.0" BorderPane.alignment="CENTER">
         <menus>
            <Menu text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#onNew" text="New" />
                  <MenuItem mnemonicParsing="false" onAction="#onLoad" text="Open" />
                  <MenuItem mnemonicParsing="false" onAction="#onSave" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#onSaveAs" text="Save as" />
                  <MenuItem mnemonicParsing="false" onAction="#onClose" text="Exit" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
               <items>
                  <MenuItem mnemonicParsing="false" text="Undo" />
                  <MenuItem mnemonicParsing="false" text="Redo" />
                  <MenuItem mnemonicParsing="false" text="Cut" />
                  <MenuItem mnemonicParsing="false" text="Copy" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="View">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Selection">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Find">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Package">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <center>
      <SplitPane dividerPositions="0.5" prefHeight="747.0" prefWidth="1089.0" BorderPane.alignment="CENTER">
         <items>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="613.0" prefWidth="768.0" stylesheets="@editor/OrigamiDark.css" />
            <CodeArea fx:id="codeArea" lineHighlighterOn="true" prefHeight="745.0" prefWidth="815.0" />
         </items>
      </SplitPane>
   </center>
   <bottom>
      <ButtonBar prefHeight="21.0" prefWidth="1089.0" BorderPane.alignment="CENTER">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <buttons>
            <MenuButton mnemonicParsing="false" text="Mode">
              <items>
                <MenuItem mnemonicParsing="false" text="Code" />
                <MenuItem mnemonicParsing="false" text="GitHub README" />
              </items>
            </MenuButton>
         </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
